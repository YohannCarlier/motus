{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Le Jeu Motus{% endblock %}

{% block body %}

{% if app.user %}
        <div class="mb-3">
            <a href="{{ path('compte',{username: app.user.userIdentifier}) }}" class="btn btn-primary btn-retour">{{ app.user.userIdentifier }}</a>
        </div>
    {% endif %}

    <h1>Le Jeu Motus</h1>
    <a href="/game" class="btn btn-primary">Classique</a>
     <p>Devine autant de mot que tu veux</p>
     <a href="/difficult" class="btn btn-primary">Contre la montre</a>
     <p>Devine le mot avant le temps imparti</p>

{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #4a86ba;
            color: #333;
            margin: 0;
            padding: 100px;
            text-align: center;
        }

        h1 {
            color: #ffffff;
            font-family: sans-serif;
            font-weight: bold;
        }

        p {
            font-size: 20px;
            margin-bottom: 20px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            text-decoration: none;
            background-color: #d1b31f;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #d11f1f;
        }
    </style>

{% endblock %}